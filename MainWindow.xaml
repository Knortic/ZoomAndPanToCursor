<Window x:Class="ZoomAndPanToCursor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZoomAndPanToCursor"
        mc:Ignorable="d"
        Title="Zooming and Panning to Cursor" Height="1280" Width="1080">
    <Grid x:Name="LayoutRoot" >
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" Name="border" ClipToBounds="True">
            <!--<Image Name="image" Opacity="1" Source="/WPF%20Image%20Pan%20and%20Zoom;component/Images/test.tif" />-->
            <Image Name="image" Source="https://icatcare.org/app/uploads/2018/07/Thinking-of-getting-a-cat.png" Width="800" Height="800"/>
        </Border>

        <Label Content="Mousewheel to zoom. Hold left mousebutton to pan." Height="35" HorizontalAlignment="Center" Margin="123,12,128,0" Name="label1" VerticalAlignment="Top" Width="293" />
    </Grid>
</Window>
